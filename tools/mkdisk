#!/bin/execlineb -S2
# Usage: mkdisk IMGFILE SIZE

if {
    backtick -ni OFFSET { dc -e "${2} 2097152 * 1 - p" }
    import -u OFFSET
    dd if=/dev/zero of=${1} bs=512 count=1 seek=${OFFSET}
}

if {
    sgdisk
        -o
        -n 0:0:+100M -t 0:8300 -c 0:boot -A 0:set:2
        -n 0:0:-1G   -t 0:8300 -c 0:root
        -n 0:0:0     -t 0:8200 -c 0:swap
        -p
        ${1}
}

sudo

backtick -ni LODEV { losetup -f --show -P ${1} }
import -u LODEV

foreground {
    if { mkfs.ext3 -L boot ${LODEV}p1 }
    if { mkfs.ext4 -L root ${LODEV}p2 }
    if { mkswap -L swap ${LODEV}p3 }
    echo ${1}Â DONE
}

losetup -d $LODEV
