#!/bin/execlineb
multisubstitute {
    importas -ui IMGFILE 1
    importas -ui ROOTDIR 2
}
emptyenv -P

sudo
if { umount -R $ROOTDIR }
foreground { sync }
if {
    forbacktickx -n LODEV { losetup -nO NAME -j $IMGFILE }
    import -u LODEV
    losetup -d $LODEV
}

foreground { rm -f ${ROOTDIR}/.mounted }
touch ${ROOTDIR}/.unmounted
